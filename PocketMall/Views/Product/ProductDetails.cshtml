@model Product
@{
    ViewData["Title"] = Model.Name;
    var extension = System.IO.Path.GetExtension(Model.ImageUrl);
    var path = $"/productImages/{Model.ProductId + extension}";
}
<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center shadow-lg">
                    <a class="rounded-4"
                       href="#">
                        <img style="max-width: 100%; max-height: 60vh; margin: auto"
                             class="rounded-4 fit"
                             src="@path" />
                    </a>
                </div>
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        @Model.Name
                    </h4>
                    <div class="d-flex flex-column my-3">
                        <div>
                            <h5 class="text-success">In Stock</h5>
                        </div>
                        <div>
                            <h6 class="text-muted">
                                @Model.Quantity
                            </h6>
                        </div>
                        <div>
                            <span>Rating: 4.5 </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <span class="h5">@Model.Price PKR</span>
                    </div>

                    <p>
                        @Model.Description
                    </p>
                    <hr />
                    <a asp-action="AddToCart" asp-controller="Order" asp-route-productId="@Model.ProductId" class="btn btn-warning shadow-0">
                        <i class="me-1 fa fa-solid fa-cart-arrow-down"></i> Add to cart
                    </a>
                </div>
            </main>
        </div>
    </div>
</section>
<!-- content -->

<vc:similar-products category="@Model.Category" product-id="@Model.ProductId"></vc:similar-products>
