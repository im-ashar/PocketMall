@{
    ViewData["Title"] = "SignUp";
}
@model SignUp
<section>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign Up</p>

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <form action="~/Account/SignUp" method="post" class="mx-1 mx-md-4">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Name" class="fw-bold">Name</label>
                                            <span class="name d-block form-control">
                                                <input asp-for="Name" placeholder="Your Name" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="UserName" class="fw-bold">UserName</label>
                                            <span class="username d-block form-control">
                                                <input asp-for="UserName" placeholder="Choose a UserName" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Email" class="fw-bold">Email</label>
                                            <span class="email d-block form-control">
                                                <input asp-for="Email" placeholder="Enter your Email" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="PhoneNumber" class="fw-bold">Phone Number</label>
                                            <span class="phone-number d-block form-control">
                                                <input asp-for="PhoneNumber" placeholder="Enter your Phone Number" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Password" class="fw-bold">Password</label>
                                            <span class="password d-block form-control">
                                                <input asp-for="Password" placeholder="Enter your Password" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ConfirmPassword" class="fw-bold">Confirm Password</label>
                                            <span class="password d-block form-control">
                                                <input asp-for="ConfirmPassword" placeholder="Repeat your Password" class="form-control border-0" />
                                            </span>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg shadow-sm signup-button">Sign Up</button>
                                    </div>
                                </form>
                                <div class="text-center">
                                    <a href="~/Account/LogIn" class="text-decoration-none text-light btn btn-secondary shadow-sm login-button2">Already have an Account? Login</a>
                                </div>
                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="~/signup-image.png" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>