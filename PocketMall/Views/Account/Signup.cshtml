@{
    Layout = "_AccountLayout.cshtml";
    ViewData["Title"] = "SignUp";
}
@model SignUp
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign Up</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="POST" action="/Account/Signup" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Name" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="UserName" placeholder="Your UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="PhoneNumber" placeholder="Your Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                        <span asp-validation-for=" ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group form-button">
                        <button type="submit" class="form-submit">Sign Up</button>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="~/Account/LogIn" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>


